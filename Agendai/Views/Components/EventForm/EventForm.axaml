<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Agendai.ViewModels"
             xmlns:addEvent="clr-namespace:Agendai.Views.Components.EventList"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Agendai.Views.Components.EventForm.EventForm"
             x:DataType="vm:EventListViewModel">
    <Border Width="{Binding $parent[Window].Bounds.Width}"
            Height="{Binding $parent[Window].Bounds.Height}"
            Background="#80202020"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Border.Transitions>
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
            </Transitions>
        </Border.Transitions>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="WhiteSmoke"
                    CornerRadius="10"
                    Padding="20"
                    BoxShadow="0 4 20 0 #66000000">
                <addEvent:AddEvent DataContext="{Binding}" />
            </Border>
        </Grid>
    </Border>
</UserControl>
