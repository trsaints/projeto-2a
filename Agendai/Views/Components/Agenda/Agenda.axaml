<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Agendai.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Agendai.Views.Components.Agenda.Agenda"
             x:DataType="vm:AgendaWindowViewModel">
    <StackPanel>
        <StackPanel Margin="20" Orientation="Horizontal">
            <TextBlock>Calendário</TextBlock>

            <ComboBox SelectedIndex="{Binding SelectedIndex}" MaxDropDownHeight="100">
                <ComboBoxItem>Mes</ComboBoxItem>
                <ComboBoxItem>Semana</ComboBoxItem>
                <ComboBoxItem>Dia</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel>
            <DataGrid
                Margin="10"
                AutoGenerateColumns="True"
                IsReadOnly="True"
                GridLinesVisibility="All"
                BorderThickness="1"
                ItemsSource="{Binding DataGridItems}">
            </DataGrid>
        </StackPanel>
    </StackPanel>
</UserControl>