<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Agendai.ViewModels"
             xmlns:conv="clr-namespace:Agendai.Data.Converters"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="Agendai.Views.Components.TodoForm.TodoForm"
             x:DataType="vm:TodoWindowViewModel">
             
    <UserControl.Resources>
        <conv:EventNameDisplayConverter x:Key="EventNameDisplayConverter" />
    </UserControl.Resources>

    <StackPanel Spacing="16">
        <StackPanel Spacing="4" Margin="0,0,0,8">
            <Label Target="TodoTitle" FontWeight="Medium">Título</Label>

            <TextBox Text="{Binding NewTaskName}"
                     FontSize="14" Watermark="Ex.: Comprar café"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"
                     x:Name="TodoTitle" />
        </StackPanel>

        <StackPanel Spacing="4" Margin="0,0,0,8">
            <Label Target="TodoDesc" FontWeight="Medium">Descrição</Label>

            <TextBox Text="{Binding NewDescription}"
                     FontSize="14" Watermark="Adicione uma descrição"
                     Padding="14,10"
                     AcceptsReturn="True"
                     Height="90"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"
                     x:Name="TodoDesc" />
        </StackPanel>

        <Border CornerRadius="16"
                Margin="0,0,0,8"
                BorderBrush="Transparent"
                Background="#EBE6E7"
                Padding="16 8">
            <StackPanel Spacing="4">
                <Label Target="TodoDue" FontWeight="Medium">Prazo</Label>

                <DatePicker SelectedDate="{Binding NewDue, Converter={StaticResource DateTimeOffsetConverter}}"
                            FontSize="14"
                            BorderBrush="Transparent"
                            Background="#EBE6E7"
                            x:Name="TodoDue" />
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" Spacing="16">
            <StackPanel Spacing="4">
                <Label Target="TodoRepeats" FontWeight="Medium">Frequência</Label>

                <ComboBox ItemsSource="{Binding RepeatOptions}"
                          SelectedItem="{Binding SelectedRepeats}"
                          FontSize="14"
                          CornerRadius="8"
                          BorderBrush="Transparent"
                          Background="#EBE6E7"
                          x:Name="TodoRepeats" />
            </StackPanel>

            <StackPanel Spacing="4">
                <Label Target="TodoListName" FontWeight="Medium">Adicionar à</Label>
                
                <AutoCompleteBox x:Name="TodoListName"
                                 ItemsSource="{Binding ListNames}"
                                 Text="{Binding ListName, Mode=TwoWay}"
                                 FilterMode="Contains" MinimumPrefixLength="0"
                                 GotFocus="TodoListName_OnGotFocus" />
            </StackPanel>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="{Binding SelectedEvent.Name, 
					   Converter={StaticResource EventNameDisplayConverter},
					   FallbackValue='Nenhum Evento Associado'}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
            <Button Content="Cancelar"
                    Margin="0,0,0,0" CornerRadius="24"
                    Padding="16,8"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="White"
                    Foreground="#0078D7"
                    BorderBrush="#0078D7"
                    BorderThickness="2"
                    Command="{Binding CancelCommand}" />

            <Button Content="Salvar"
                    Margin="0,0,0,0" CornerRadius="24"
                    Padding="16,8"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#0078D7"
                    Foreground="White"
                    BorderBrush="#0078D7"
                    BorderThickness="2"
                    Command="{Binding AddTodoCommand}" 
                    IsEnabled="{Binding HasChanges}"/>
        </StackPanel>
    </StackPanel>
</UserControl>