<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Agendai.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="Agendai.Views.Components.TaskForm.TaskForm"
             x:DataType="vm:TodoWindowViewModel">

    <StackPanel Spacing="20">
        <StackPanel Spacing="6">
            <Label Target="TodoTitle">Título</Label>

            <TextBox Text="{Binding NewTaskName}"
                     FontSize="14" Watermark="Ex.: Comprar café"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"
                     Margin="0,0,0,8"
                     x:Name="TodoTitle" />
        </StackPanel>

        <StackPanel Spacing="6">
            <Label Target="TodoDesc">Descrição</Label>

            <TextBox Text="{Binding NewDescription}"
                     FontSize="14" Watermark="Adicione uma descrição"
                     Padding="14,10"
                     AcceptsReturn="True"
                     Height="90"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"
                     Margin="0,0,0,8"
                     x:Name="TodoDesc" />
        </StackPanel>

        <StackPanel Spacing="6">
            <Label Target="TodoDue">Prazo</Label>

            <DatePicker SelectedDate="{Binding NewDue, Converter={StaticResource DateConverter}}"
                        FontSize="14"
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"
                        Margin="0,0,0,8"
                        x:Name="TodoDue" />
        </StackPanel>

        <Grid ColumnDefinitions="*,10,*">
            <StackPanel Spacing="6" Grid.Column="0">
                <Label Target="TodoRepeats">Frequência</Label>

                <ComboBox ItemsSource="{Binding RepeatOptions}"
                          SelectedItem="{Binding Repeat}"
                          SelectedIndex="0"
                          FontSize="14"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD"
                          x:Name="TodoRepeats" />
            </StackPanel>

            <StackPanel Spacing="6" Grid.Column="2">
                <Label Target="TodoListName">Adicionar à</Label>

                <ComboBox ItemsSource="{Binding ListNames}"
                          SelectedItem="{Binding ListName}"
                          SelectedIndex="0"
                          FontSize="14"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD"
                          x:Name="TodoListName" />
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal">
            <Button Content="Cancelar"
                    Margin="0,0,0,0" CornerRadius="10" HorizontalAlignment="Right"
                    Padding="16,12" HorizontalContentAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="White"
                    Foreground="#0078D7"
                    Command="{Binding CancelCommand}" />

            <Button Content="Salvar"
                    Margin="0,0,0,0" CornerRadius="10" HorizontalAlignment="Right"
                    Padding="16,12" HorizontalContentAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#0078D7"
                    Foreground="White"
                    Command="{Binding AddTodoCommand}" />
        </StackPanel>
    </StackPanel>
</UserControl>